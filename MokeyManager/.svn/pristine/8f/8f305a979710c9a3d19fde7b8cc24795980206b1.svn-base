<script>//判断文字的class是否为none，替换样式inline或none
     $(document).ready(function(){
            $("#btn").click(function(){
                if($("#txt").attr('class')=="none"){
                    $("#txt").attr({ "class":"inline"});
                    $("#btn").html('收回');
                }else{
                    $("#txt").attr({ "class":"none"});
                    $("#btn").html('更多');
                }
            });
			$("#btn").click(function(){    
	 $( "#btn" ).toggleClass( "brand-nav-off", 500 );
	
  });
        })
</script>
<style>
.none{display:none;}
.inline{display:inline;}
#btn{color:#ff6b21; cursor:pointer; display:block; width:40px;height:20px; margin:5px auto;}
