@charset "utf-8";
/* CSS Document */
.clearfix:after { 
   content: ".";
   display: block;
   height: 0;
   clear: both;
   visibility: hidden;
   font-size: 0;
}
.clearfix {display: inline-block; }
*html .clearfix {height:1%;}
.clearfix {display: block;}
.clearfix {zoom: 1;overflow: visible;}


.f_r{float:right;_display:inline;}
.f_l{float:left;_display:inline;}
.fl {float: left;}
/*nav css*/
.nav {
	width:1200px;
    height: 48px;
    line-height: 48px;
    /*background-color: #414141;*/
    z-index: 1000;
	margin:0 auto;
	float:none;
	overflow:visible;
}
.nav a {
    color: #fff;
	text-decoration:none;
	height: 48px;
    line-height: 48px;
	padding:0;
	font-size:16px;
	font-weight:100;
	
}
/*.nav a:hover {
    color: #fff;
    text-decoration: none;
	border-bottom:none;
    height: 48px;
}*/
.nav-menus {
    position: relative;
    z-index: 105;
}

.nav-menus i.category-trangle-bg {
    position: absolute;
    left: 93px;
    top: -5px;
    float: left;
    width: 9px;
    height: 5px;
    background-image: url(../images/category-trangle-bg.png);
    background-repeat: no-repeat;
}
.nav-menus .categorys {
    position: absolute;
    left: 0;
    top: 48px;
    width: 200px;
	height:40px;
    background-color: #E7EDF4;
    display:none;
}



.nav .handle {
    float: left;
    width: 200px;
    height: 48px;
    font-size: 17px;
    background-color: #69a6c3;
	color:#fff;
}
/*.nav .handle:hover{ background-color: #87b8cf;}*/
.nav .handle i {
    float: left;
    width: 18px;
    height: 13px;
    margin-top: 17px;
    margin-right: 15px;
    margin-left: 43px;
    background-image: url(../images/cover-page-nav.png);
    background-repeat: no-repeat;
}
.nav .channel {
    float: left;
    width: 100px;
    /*font-size: 14px;*/
    text-align: center;
}
/*导航追加的样式*/
.nav .channel:hover,
.nav .channel-now {
    background-color:transparent;
}
.cover-page-wrapper2 {
    z-index: 80;
}
.cover-page-wrapper2 .move_div {
    height:100%;
    background:#87b8cf;
}
.cover-page-wrapper2 .active {
    background-color:transparent;

}
.nav .channel{
    position:relative;
    z-index:70;
}
